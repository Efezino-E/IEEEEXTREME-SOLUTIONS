#python IEEE Extreme 11 Solution to Jarawi and The Interview problem
map = {}
str1 = input()
len1 = len(str1)
a1 = 7
def prevappend(listy,prev):
  if listy[-1] > prev:
    return False,0
  for element in listy:
    if element<prev:
      return True,element
  return False,0

for i in range(-1,-len1-1,-1):
  try:
    map[str1[i]].append(i)
  except:
    map[str1[i]] = [i]

for i in range(int(input())):
  str2 = input()[::-1]
  score = 0
  printed = False
  prev = 0

  for element in str2:
    if element not in map.keys():
      print(score)
      printed = True
      break
    else:
      pret = prevappend(map[element],prev)
      if pret[0] == True:
        score +=1
        prev = pret[1]
      else:
        print(score)
        printed = True
        break
  if printed == False:
    print(score)


